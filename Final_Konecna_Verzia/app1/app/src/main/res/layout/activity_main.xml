<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/ic_pozadie"
    >


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="119dp"
        android:layout_height="119dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="29dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageButton
            android:background="@drawable/ic_mapa"
            android:id="@+id/mapa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:text="Mapa"
            android:textColor="#FFFF00" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="119dp"
        android:layout_height="119dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="48dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">


        <ImageButton
            android:background="@drawable/ic_pocasie"
            android:id="@+id/pocasie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:text="Pocasie"
            android:textColor="#FFFF00" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="119dp"
        android:layout_height="119dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="30dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageButton
            android:background="@drawable/ic_sos"
            android:id="@+id/SoS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:text="Morse SoS"
            android:textColor="#FFFF00" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="119dp"
        android:layout_height="119dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="30dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">


        <ImageButton
            android:background="@drawable/ic_ulozenie"
            android:id="@+id/Nahraj_Obrazok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:text="Nahratie Obrazka"
            android:textColor="#FFFF00" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="119dp"
        android:layout_height="119dp"
        android:layout_marginStart="133dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="41dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <ImageButton
            android:id="@+id/ZaznamenajZazitok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_dennik"
            />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:text="Zaznamenaj do Dennika"
            android:textColor="#FFFF00" />
    </LinearLayout>



</android.support.constraint.ConstraintLayout>